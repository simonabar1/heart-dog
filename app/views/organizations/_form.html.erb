
<%= simple_form_for(@organization) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :whatsapp, :label => "Whatsapp Number"  %>
  <%= f.input :email, :label => "Email Address", pattern: "[a-zA-Z]+" %>
  <%= f.input :website %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>

   <div class="form-actions" style='text-align: center'>
    <%= f.button :submit, "Submit", class: 'btn btn-flat' %>
  </div>

<% end %>
