<div style='background-color: #E8CFC1; height: 100%'>
<div class="container" style='padding: 100px 0; width: 50%;'>
<div style='text-align: center; padding-bottom: 20px'>
<h2>Update your <span style='font-weight: bold; color: #e86048;'> Profile</span> </h2>
<h5> Make sure your personal information is always up to date. </h5>
</div>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">


    <%= f.input :first_name,
                  required: true %>
    <%= f.input :last_name,
                  required: true %>
     <%= f.input :city,
                  required: true %>
      <%= f.input :description,
                required: true %>
       <%= f.input :habitation,
                :label => "Currently Living In:",
                as: :select, collection: [['House with Garden', 'House with Garden'], ['House without Garden', 'House without Garden'], ['Apartment', 'Apartment'],  ['Shared Apartment', 'Shared Apartment'], ['Room', 'Room']] %>
      <%= f.input :photo, as: :file %>

    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions" style='text-align: center'>
    <%= f.button :submit, "Update", class: 'btn btn-flat' %>
  </div>
<% end %>

<div style='text-align: center; padding: 20px;'>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%# link_to "Back", :back %>
</div>
</div>
</div>
</div>
